!-------------------------------------------------------------------------------
!!! XFT SETTINGS !!!
!-------------------------------------------------------------------------------
Xft.autohint: 0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb


!-------------------------------------------------------------------------------
!!! URXVT SETTINGS !!!
!-------------------------------------------------------------------------------
urxvt*font: xft:Gohu GohuFont:size=11,xft:Inconsolata\ for\ Powerline:pixelsize=13
!urxvt*font: -*-gohufont-medium-r-normal-*-*-*-*-*-*-*-*-*
!Urxvt*depth: 33
URxvt*cursorBlink: true
URxvt*geometry: 155x40
!URxvt*internalBorder: 16
URxvt*borderLess: false
URxvt*scrollBar: false
URxvt*cursorUnderline: false
URxvt.underlineURLs: true
!URxvt.letterSpace: 1
URxvt.iconFile: /usr/share/icons/Menda-Circle/apps/48x48/apps/terminator.svg
URxvt.colorUL: #ffc107

